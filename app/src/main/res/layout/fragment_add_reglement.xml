<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.tn.biat.fragments.val.AddReglementFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8.0dip"
            android:layout_marginBottom="8.0dip">
            <EditText
                android:textSize="22dp"
                android:gravity="center"
                android:id="@+id/montant_lettre"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="montant lettre" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8.0dip"
            android:layout_marginBottom="8.0dip">
            <EditText
                android:textSize="22dp"
                android:gravity="center"
                android:id="@+id/montant_chiffre"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="montant chiffre" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8.0dip"
            android:layout_marginBottom="8.0dip">
            <EditText
                android:textSize="22dp"
                android:gravity="center"
                android:id="@+id/devise"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="devise" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8.0dip"
            android:layout_marginBottom="8.0dip">
            <EditText
                android:textSize="22dp"
                android:gravity="center"
                android:id="@+id/motif_payement"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="motif payement" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8.0dip"
            android:layout_marginBottom="8.0dip">
            <EditText
                android:textSize="22dp"
                android:gravity="center"
                android:id="@+id/frais_commission_BIAT"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="frais commission BIAT" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8.0dip"
            android:layout_marginBottom="8.0dip">
            <EditText
                android:textSize="22dp"
                android:gravity="center"
                android:id="@+id/frais_correspondant"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="frais correspondant" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8.0dip"
            android:layout_marginBottom="8.0dip">
            <EditText
                android:textSize="22dp"
                android:gravity="center"
                android:id="@+id/type_payement"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="type payement" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8.0dip"
            android:layout_marginBottom="8.0dip">
            <EditText
                android:textSize="22dp"
                android:gravity="center"
                android:id="@+id/observation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="observation" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8.0dip"
            android:layout_marginBottom="8.0dip">
            <EditText
                android:textSize="22dp"
                android:gravity="center"
                android:id="@+id/titre_commerce_extrieurs"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="titre commerce extrieurs" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8.0dip"
            android:layout_marginBottom="8.0dip">
            <EditText
                android:textSize="22dp"
                android:gravity="center"
                android:id="@+id/nom_donneur_dordre"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="nom donneur d'ordre" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8.0dip"
            android:layout_marginBottom="8.0dip">
            <EditText
                android:textSize="22dp"
                android:gravity="center"
                android:id="@+id/adresse_donneur_dordre"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="adresse donneur d'ordre" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8.0dip"
            android:layout_marginBottom="8.0dip">
            <EditText
                android:textSize="22dp"
                android:gravity="center"
                android:id="@+id/num_compte"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="num_compte" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8.0dip"
            android:layout_marginBottom="8.0dip">
            <EditText
                android:textSize="22dp"
                android:gravity="center"
                android:id="@+id/code_devise"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="code devise" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8.0dip"
            android:layout_marginBottom="8.0dip">
            <EditText
                android:textSize="22dp"
                android:gravity="center"
                android:id="@+id/num_code_douane"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="num code douane" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8.0dip"
            android:layout_marginBottom="8.0dip">
            <EditText
                android:textSize="22dp"
                android:gravity="center"
                android:id="@+id/num_registre_commerce"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="num registre commerce" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8.0dip"
            android:layout_marginBottom="8.0dip">
            <EditText
                android:textSize="22dp"
                android:gravity="center"
                android:id="@+id/fournisseur"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="fournisseur" />
        </android.support.design.widget.TextInputLayout>
        <Button
            android:text="Valider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/submit"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:textColor="@android:color/white"
            android:textColorLink="?attr/colorPrimary"
            tools:ignore="HardcodedText,InefficientWeight" />
    </LinearLayout>
</ScrollView>
