<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorTrans">
        <LinearLayout
            android:id="@+id/l1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/add_val"
                android:layout_margin="5dp"
                android:text="Validateur"
                android:drawableLeft="@drawable/ic_add"
                android:layout_width="0dp"
                android:textColor="@android:color/white"
                android:background="@color/colorAccent"
                android:layout_weight="0.5"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/add_auth"
                android:layout_margin="5dp"
                android:drawableLeft="@drawable/ic_add"
                android:text="Authorisateur"
                android:layout_width="0dp"
                android:textColor="@android:color/white"
                android:background="@color/colorAccent"
                android:layout_weight="0.5"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/l1"
            android:id="@+id/l2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/list_val"
                android:layout_margin="5dp"
                android:text="Validateurs"
                android:drawableLeft="@drawable/ic_list"
                android:layout_width="0dp"
                android:textColor="@android:color/white"
                android:background="@color/colorAccent"
                android:layout_weight="0.5"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/list_auth"
                android:layout_margin="5dp"
                android:text="Authorisateurs"
                android:drawableLeft="@drawable/ic_list"
                android:layout_width="0dp"
                android:textColor="@android:color/white"
                android:background="@color/colorAccent"
                android:layout_weight="0.5"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/l3"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/add_dep"
                android:layout_margin="5dp"
                android:text="Département"
                android:drawableLeft="@drawable/ic_add"
                android:layout_width="0dp"
                android:textColor="@android:color/white"
                android:background="@color/colorPrimary"
                android:layout_weight="0.5"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/list_dep"
                android:layout_margin="5dp"
                android:text="Départements"
                android:drawableLeft="@drawable/ic_list"
                android:layout_width="0dp"
                android:textColor="@android:color/white"
                android:background="@color/colorPrimary"
                android:layout_weight="0.5"
                android:layout_height="match_parent" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
